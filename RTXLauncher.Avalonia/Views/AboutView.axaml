<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:RTXLauncher.Avalonia.ViewModels"
             x:Class="RTXLauncher.Avalonia.Views.AboutView"
             x:DataType="vm:AboutViewModel">

	<Grid RowDefinitions="Auto,*" Margin="10">
		<!-- About Info Section (Stays the same) -->
		<Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="3">
			<StackPanel Spacing="5">
				<TextBlock Text="The Garry's Mod RTX Launcher" FontWeight="Bold" FontSize="16"/>
				<TextBlock Text="Based on the original by CR, written by Xenthio and CR." TextWrapping="Wrap"/>
				<TextBlock Text="{Binding CurrentVersion}"/>
			</StackPanel>
		</Border>

		<!-- Updates Section -->
		<Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="10" CornerRadius="3" Margin="0,10,0,0">
			<Grid RowDefinitions="Auto,*,Auto">
				<TextBlock Grid.Row="0" Text="Updates" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>

				<TextBox Grid.Row="1"
						Text="{Binding ReleaseNotes}"
						IsReadOnly="True"
						AcceptsReturn="True"
						TextWrapping="Wrap"
						ScrollViewer.VerticalScrollBarVisibility="Auto" />

				<StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
					<ComboBox ItemsSource="{Binding UpdateSources}" SelectedItem="{Binding SelectedUpdateSource}" HorizontalAlignment="Stretch" Width="250"/>
					<Button Content="Install" Command="{Binding InstallUpdateCommand}" IsEnabled="{Binding !IsCheckingForUpdates}"/>
					<Button Content="Check for Updates" Command="{Binding CheckForUpdatesCommand}" IsEnabled="{Binding !IsCheckingForUpdates}"/>
				</StackPanel>
			</Grid>
		</Border>
	</Grid>
</UserControl>